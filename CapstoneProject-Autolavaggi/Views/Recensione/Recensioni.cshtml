@model CapstoneProject_Autolavaggi.Models.AutolavaggioViewModel

@{
    ViewData["Title"] = "Recensioni per " + Model.Autolavaggio.Nome;
}

<h1>@Model.Autolavaggio.Nome - Recensioni</h1>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Recensioni</h2>
            @if (Model.Recensioni.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Titolo</th>
                            <th>Voto</th>
                            <th>Commento</th>
                            <th>Data</th>
                            <th>Utente</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var recensione in Model.Recensioni)
                        {
                            <tr>
                                 <td>@recensione.Titolo</td>
                                <td class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <input type="radio" id="star@i_@recensione.Id" name="rating_@recensione.Id" value="@i" disabled @(i <= recensione.Voto ? "checked" : "") />
                                        <label for="star@i_@recensione.Id" class="fa fa-star"></label>
                                    }
                                </td>
                                <td>@recensione.Commento</td>
                                <td>@recensione.Data.ToString("dd/MM/yyyy")</td>
                                <td>@recensione.User?.Nome</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Nessuna recensione disponibile.</p>
            }
        </div>

        <div class="col-md-4">
            <h2>Aggiungi una Recensione</h2>

            <form asp-action="AggiungiRecensione" method="post">
                <div class="form-group">
                    <label asp-for="NuovaRecensione.Titolo" class="control-label"></label>
                    <input asp-for="NuovaRecensione.Titolo" class="form-control" />
                    <span asp-validation-for="NuovaRecensione.Titolo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Voto</label>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <input type="radio" id="star@i" name="NuovaRecensione.Voto" value="@i" />
                            <label for="star@i" class="fa fa-star"></label>
                        }
                    </div>
                    <span asp-validation-for="NuovaRecensione.Voto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NuovaRecensione.Commento" class="control-label"></label>
                    <textarea asp-for="NuovaRecensione.Commento" class="form-control"></textarea>
                    <span asp-validation-for="NuovaRecensione.Commento" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="NuovaRecensione.AutolavaggioId" />
                <input type="submit" value="Aggiungi Recensione" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
