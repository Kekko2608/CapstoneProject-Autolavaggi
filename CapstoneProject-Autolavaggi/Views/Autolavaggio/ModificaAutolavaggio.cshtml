@model CapstoneProject_Autolavaggi.Models.AutolavaggioViewModel

@{
    ViewData["Title"] = "Modifica Autolavaggio";
}

<h2>Modifica Autolavaggio</h2>

<form asp-action="ModificaAutolavaggio" method="post">
    <input type="hidden" asp-for="Autolavaggio.Id" />

    <div class="form-group">
        <label asp-for="Autolavaggio.Nome" class="control-label"></label>
        <input asp-for="Autolavaggio.Nome" class="form-control" />
        <span asp-validation-for="Autolavaggio.Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.Via" class="control-label"></label>
        <input asp-for="Autolavaggio.Via" class="form-control" />
        <span asp-validation-for="Autolavaggio.Via" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.Città" class="control-label"></label>
        <input asp-for="Autolavaggio.Città" class="form-control" />
        <span asp-validation-for="Autolavaggio.Città" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.CAP" class="control-label"></label>
        <input asp-for="Autolavaggio.CAP" class="form-control" />
        <span asp-validation-for="Autolavaggio.CAP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GoogleMapsUrl">Google Maps URL</label>
        <input type="text" class="form-control" id="GoogleMapsUrl" name="Autolavaggio.GoogleMapsUrl" value="@Model.Autolavaggio.GoogleMapsUrl" />
    </div>


    <div class="form-group">
        <label asp-for="Autolavaggio.Telefono" class="control-label"></label>
        <input asp-for="Autolavaggio.Telefono" class="form-control" />
        <span asp-validation-for="Autolavaggio.Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.Descrizione" class="control-label"></label>
        <textarea asp-for="Autolavaggio.Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Autolavaggio.Descrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.Immagine" class="control-label"></label>
        <input asp-for="Autolavaggio.Immagine" class="form-control" />
        <span asp-validation-for="Autolavaggio.Immagine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.OrariDescrizione" class="control-label"></label>
        <textarea asp-for="Autolavaggio.OrariDescrizione" class="form-control"></textarea>
        <span asp-validation-for="Autolavaggio.OrariDescrizione" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Autolavaggio.TipoNome" class="control-label"></label>
        <select asp-for="Autolavaggio.TipoNome" class="form-control" asp-items="@(new SelectList(Model.Tipi, "Nome", "Nome"))"></select>
        <span asp-validation-for="Autolavaggio.TipoNome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Servizi</label>
        <div>
            @foreach (var servizio in Model.Servizi)
            {
                <div class="form-check">
                    <input type="checkbox" name="SelectedServizi" value="@servizio.Id" class="form-check-input"
                    @(Model.SelectedServizi.Contains(servizio.Id) ? "checked" : "") />
                    <label class="form-check-label">@servizio.Nome</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
    </div>
</form>
