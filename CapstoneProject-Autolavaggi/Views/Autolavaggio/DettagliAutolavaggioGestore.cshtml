@model CapstoneProject_Autolavaggi.Models.AutolavaggioViewModel

@{
    ViewData["Title"] = "Dettagli Autolavaggio Gestore";
}

<div class="container mt-5">
    <h2 class="mb-4">@Model.Autolavaggio.Nome</h2>

    <!-- Sezione Dettagli Autolavaggio -->
    <div class="row mb-4">
        <div class="col-md-6">
            <img src="@Model.Autolavaggio.Immagine" alt="Immagine Autolavaggio" class="img-fluid rounded shadow-sm" />
        </div>
        <div class="col-md-6">
            <p class="my-5"><strong><i class="bi bi-geo-alt-fill"></i> INDIRIZZO:</strong> @Model.Autolavaggio.Via, @Model.Autolavaggio.Città, @Model.Autolavaggio.CAP</p>
            <p class="my-5"><strong><i class="bi bi-telephone-fill"></i> TELEFONO:</strong> @Model.Autolavaggio.Telefono</p>
            <p class="my-5"><strong>DESCRIZIONE:</strong> @Model.Autolavaggio.Descrizione</p>
            <p class="my-5"><strong><i class="bi bi-alarm-fill"></i> ORARI:</strong> @Model.Autolavaggio.OrariDescrizione</p>
            <a asp-action="ModificaAutolavaggio" asp-route-id="@Model.Autolavaggio.Id" class="btn bg-blue text-white">Modifica</a>
        </div>
    </div>
    <hr />
    <!-- Sezione Recensioni -->
    <h4 class="mb-4">Recensioni Autolavaggio</h4>
    @if (Model.Recensioni.Any())
    {
        <div class="list-group col-6">
            @foreach (var recensione in Model.Recensioni)
            {
                <div class="list-group-item mb-3 border-light">
                    <!-- Stelle di valutazione -->
                    <div class="rating mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <input type="radio" id="star@i_@recensione.Id" name="rating_@recensione.Id" value="@i" disabled @(i <= recensione.Voto ? "checked" : "") />
                            <label for="star@i_@recensione.Id" class="fa fa-star"></label>
                        }
                    </div>
                    <h5 class="mb-1 text-primary">@recensione.Titolo</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Scritta da: @recensione.User?.Nome</h6>

                    <p>@recensione.Commento</p>
                    <p><small class="text-muted">Data: @recensione.Data.ToString("dd/MM/yyyy")</small></p>
                </div>
            }
        </div>
    }
    else
    {
        <p>Nessuna recensione disponibile.</p>
    }
    <hr />
    <!-- Sezione Prenotazioni -->
    <h4 class="mt-4 mb-4">Prenotazioni clienti</h4>
    @if (Model.Prenotazioni.Any())
    {
        <div class="list-group">
            @foreach (var prenotazione in Model.Prenotazioni)
            {
                <div class="list-group-item mb-2 border-light">
                    <p><strong>Utente:</strong> @prenotazione.User.Nome</p>
                    <p><strong>Data:</strong> @prenotazione.Data.ToString("dd/MM/yyyy")</p>
                    <p><strong>Servizio:</strong> @prenotazione.Servizio?.Nome</p>
                </div>
            }
        </div>
    }
    else
    {
        <p>Nessuna prenotazione disponibile.</p>
    }
</div>