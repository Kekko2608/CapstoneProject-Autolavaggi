@model CapstoneProject_Autolavaggi.Models.AutolavaggioViewModel

@{
    ViewData["Title"] = "Dettagli Autolavaggio Gestore";
}

<h2>@Model.Autolavaggio.Nome</h2>

<div class="container">
    <p>Indirizzo: @Model.Autolavaggio.Via, @Model.Autolavaggio.Città, @Model.Autolavaggio.CAP</p>
    <p>Telefono: @Model.Autolavaggio.Telefono</p>
    <p>Descrizione: @Model.Autolavaggio.Descrizione</p>
    <p>Orari: @Model.Autolavaggio.OrariDescrizione</p>
    <img src="@Model.Autolavaggio.Immagine" alt="Immagine Autolavaggio" class="img-fluid" />

    <a asp-action="ModificaAutolavaggio" asp-route-id="@Model.Autolavaggio.Id" class="btn btn-primary">Modifica</a>

    <h4>Recensioni</h4>
    @if (Model.Recensioni.Any())
    {
        <ul class="list-unstyled">
            @foreach (var recensione in Model.Recensioni)
            {
                <li class="mb-3">
                    <h5>@recensione.Titolo</h5>
                    <div class="rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <input type="radio" id="star@i_@recensione.Id" name="rating_@recensione.Id" value="@i" disabled @(i <= recensione.Voto ? "checked" : "") />
                            <label for="star@i_@recensione.Id" class="fa fa-star"></label>
                        }
                    </div>
                    <p>@recensione.Commento</p>
                    <p><small>@recensione.Data.ToString("dd/MM/yyyy")</small></p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Nessuna recensione disponibile.</p>
    }

    <h4>Prenotazioni</h4>
    @if (Model.Prenotazioni.Any())
    {
        <ul class="list-unstyled">
            @foreach (var prenotazione in Model.Prenotazioni)
            {
                <li class="mb-2">Data: @prenotazione.Data.ToString("dd/MM/yyyy") - Servizio: @prenotazione.Servizio?.Nome</li>
            }
        </ul>
    }
    else
    {
        <p>Nessuna prenotazione disponibile.</p>
    }
</div>
