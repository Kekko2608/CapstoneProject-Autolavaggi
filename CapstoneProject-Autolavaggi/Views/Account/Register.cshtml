@using CapstoneProject_Autolavaggi.Models.Auth
@model RegisterModel

@{
    ViewData["Title"] = "Registrazione";
}
<body class="bg-schiuma">
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-lg col-10" >
            <div class="card-body text-black">
                <div class="row">
                    <!-- Colonna sinistra per la scritta REGISTRAZIONE -->
                    <div class="col-md-4 d-flex align-items-center justify-content-start">
                        <h3 class="fw-bold">REGISTRAZIONE</h3>
                    </div>

                    <!-- Colonna destra per i campi del form -->
                    <div class="col-md-8">
                        <form asp-action="Register" method="post">
                            @Html.AntiForgeryToken()

                            <div class="mb-3">
                                <label asp-for="Nome" class="form-label fw-bold"></label>
                                <input asp-for="Nome" class="form-control" placeholder="Inserisci il tuo nome" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control" placeholder="Inserisci la tua email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-bold"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Inserisci la tua password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Conferma password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Conferma la tua password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="NumeroTelefono" class="fw-bold">Telefono</label>
                                <input asp-for="NumeroTelefono" class="form-control" placeholder="Inserisci il tuo numero di telefono" />
                                <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="Role" class="form-label fw-bold">Ruolo</label>
                                <select id="Role" name="roleId" class="form-select">
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        <option value="@role.Id">@role.Nome</option>
                                    }
                                </select>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn bg-blue text-white">Registrati</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
